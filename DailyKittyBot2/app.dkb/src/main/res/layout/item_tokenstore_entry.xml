<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="username"
            android:layout_toEndOf="@id/icon_current"
            />

        <TextView
            android:id="@+id/text_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expiry"
            android:layout_below="@id/text_username"
            android:layout_alignStart="@id/text_username"
            />

        <TextView
            android:id="@+id/text_token_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="token"
            android:layout_alignTop="@id/text_expiry"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

